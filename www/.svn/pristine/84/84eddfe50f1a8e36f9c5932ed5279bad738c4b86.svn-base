<script type="text/javascript">
    // 百度地图API功能
    var map = new BMap.Map("allmap");
    var point = new BMap.Point(myLongitude,myLatitude);
    
    map.centerAndZoom(point,16);
    var geoc = new BMap.Geocoder();    

    map.addEventListener("click", function(e){        
        var pt = e.point;
        localStorage.setItem("nearbyLongitude",pt.lng);
        localStorage.setItem("nearbyLatitude",pt.lat);
        geoc.getLocation(pt, function(rs){
            var addComp = rs.addressComponents;

            // alert(addComp.province + ", " + addComp.city + ", " + addComp.district + ", " + addComp.street + ", " + addComp.streetNumber);
            var nearbyArea = addComp.street+addComp.streetNumber;
            localStorage.setItem("nearbyArea",nearbyArea);
            window.history.back();
        }); 

    });
</script>
