	padding: 0px;
	border-top: 1px solid #e8e8e8;
}
.line {
	margin: 0px;
	padding: 0px;
	border-top: 1px solid #dddddd;
}
.pinglun{
   		border-bottom: 1px solid #e5e5e5;
   		padding-bottom: 25px;
