	<div class="am-u-sm-12" style="background:rgba(0,0,0,.2);position: absolute;bottom:0px;z-index: 1000;padding: 0.5em 0;">
		<div class="am-u-sm-8" style="width: 100%;">
			<div class="zi"><span id="name"></span></div>
			<div class="zi"><span id="jine"></span>元可换<span id="jifen"></span>个积分,免预约</div>
		</div>
		
	</div>
	</div>
	<div class="am-u-sm-12" style="background-color: white;padding: 0.5em 0;">
		<div class="am-u-sm-8">
			<span class="jiage-fuhao">￥</span><span id="price1"  class="jiage-shuzi"></span>
			<span class="jiage-fuhao-menshi" style="margin-left: 15px;">门市价 : ￥</span ><span id ="oldprice"class="jiage-shuzi-menshi"></span>
		</div>
		<div class="am-u-sm-4" id="goumai" onclick="goumai()">
			<div>
				立即购买
			</div>							
		</div>
	</div>
	<div class="am-u-sm-12" style="height:1px;background: #f8f8f8;border-bottom: 1px solid #eeeeee;"></div>
	<div class="am-u-sm-12" style="background-color: #ffffff;position: relative;padding-top: 5px;padding-bottom: 5px;border-bottom:1px solid #e5e5e5">
		<div class="am-u-sm-8" style="float: left;width: 30%;padding: 0;">
			<div style="font-size: 12px;color: #6fbd0f"><i class="iconfont icon-duihao2"></i>随时退</div>
			<div style="font-size: 12px;color: #6fbd0f"><i class="iconfont icon-duihao2"></i>过期自动退</div>
		</div>
		<div class="am-u-sm-8" style="float: left;width: 30%;padding: 0;">
			<div style="font-size: 12px;color: #6fbd0f"><i class="iconfont icon-duihao2"></i>随时退</div>
			<div style="font-size: 12px;color: #6fbd0f"><i class="iconfont icon-duihao2"></i>过期自动退</div>
		</div>
		<div class="am-u-sm-4" style="position: absolute;font-size:1rem;color:#6a6a6a;bottom:5px;right:0;text-align: right;"><i class="iconfont icon-renwu"></i><span>已售</span><span id="shounum"></span></div>
	
	</div>
				
	
	<div id="e_eval" class="am-u-sm-12" style="background-color: white;margin-top: 10px;padding-right: 0;">		
		<script id="s_eval" type="text/html">
			<div style="overflow: hidden;">
				<div class="am-u-sm-12" style="padding: 0;border-bottom:1px solid #e5e5e5;" onclick="fun1()">
					<div class="am-u-sm-4" style="margin-top: 8px;font-weight:bold;padding-left:0;padding-right: 0;padding-bottom:8px">用户评价
						<span style="color: #aaaaaa;margin-top: 8px;" id="zongji"></span>
					</div>
					<i class="iconfont icon-fanhuijiantou" style="font-size:1rem;float:right;margin-top:10px;color:#c6c6c6"></i>
				</div>
					
				<div class="am-accordion-content" style="padding:0em;">
					{{if pinglunliebiao}} {{each pinglunliebiao as val i}}
					<div class="am-u-sm-12 pinglun" style="padding-top: 10px;padding-right:0">
    					<div class="am-u-sm-2" style="padding:3px;border:1px solid #8dc1f9;border-radius: 50%;width: 48px;float:left">
        				<img id="userIcon" class="am-img-thumbnail am-circle" src="{{imgurl+val.icon}}"  style="border:1px solid #8dc1f9;width:40px;height:40px;" />
					</div>
				<div class="am-u-sm-10" style="float:left;padding-right: 0;padding-left: 0;margin-left: 10px;">
					<span style="color:#fbb111;font-size: 16px;font-weight: bold; display: inherit;">{{val.nickname}}</span>
					<span style="color:#9e9e9e">{{val.pinglunDate}}</span>
					<span style="display: block;margin-top:5px;text-align: justify;">{{val.pinglunneirong}}</span>
					<br>
                	<span style="color:#4887c7;font-weight: bold;margin-right: 10px; text-align: justify;">商家回复:</span><span>{{val.huifuneirong}}</span>			
				</div>
				
				</div>	
					

					{{/each}} {{else}}
					<div class="am-g" style="text-align: center; margin-top: 2em" align="center">暂无评价信息</div>
					{{/if}}
				</div>
			</div>
		</script>
	</div>
	
	
	<div data-am-widget="navbar" class="am-navbar  am-navbar-default " style="border:none;" hidden>
		<ul class="am-cf am-avg-sm-4" style="padding-left: 0px;padding-right: 0px;text-align: center;overflow: hidden;border:none; ">
			<li style="background:#fff;border:2px solid #84bcf9; width: 40%;margin-right: 1%;line-height: 40px;margin-top: 2px;margin-left: 2%;">
				<a href="shopcar.html" class="">
					<span class="mui-badge" id="shopcar-count" style="color: white;"></span> 
					<span class="am-navbar-label" style="color:#84bcf9;font-size: 14px; margin-top: 0.1em">
						<i class="iconfont icon-gouwuche" style="color: #84bcf9;font-size: 1.4rem;display: inline;margin-right: 5px;"></i>我的购物车</span>
				</a>
			</li>
			<li style="background-color:#84bcf9;width: 57%;float: right;" onclick="addToShopCar('{{val.id}}',event)"><span class="am-navbar-label" style="color: white;  margin-top: 0.1em">加入购物车</span>
			</li>
		</ul>
