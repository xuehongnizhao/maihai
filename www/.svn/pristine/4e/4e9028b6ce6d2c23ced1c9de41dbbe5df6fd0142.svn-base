</body>

<script type="text/javascript">
	var isLogin = true;
	var goodsid = getParameter("goodsid");
	var userid = window.localStorage.getItem('userid');
	var token = window.localStorage.getItem('token');
	var shanghuID = getParameter("shanghuID");
	var shangpinID = getParameter("shangpinID");
	var callcenter = "";

	if (userid == null || userid == "null") {
		isLogin = false;
	} else {
		isLogin = true;
	}
	jQuery(document).ready(function() {
		getNeirong();
		getEval();
	});
	function getEval() {
		$.ajax({
			type: "post",
			url:baseurl("APPYONGHUPINGJIA.do"),
			dataType: "jsonp",
			data:{
				"shangpinID": shangpinID,			
			},
			jsonp: "callback",
			jsonpCallback: "fenleilist",
			success: function(json) {
				json.imgurl = imgurl;
				var zongji = json.zongji;
				$('#zongji').html(zongji);
				var html = template('s_eval', json);
				$("#e_eval").html(html);			
			},
			error: function() {
			
			}
		});
	}
	function getNeirong(){

		$.ajax({
			type: "post",
			url:baseurl("APPSHANGPINDETAIL.do"),
			dataType: "jsonp",
			data:{
				"shanghuID":shanghuID,
				"shangpinID":shangpinID
				
			},
			jsonp: "callback",
			jsonpCallback: "fenlei",
			success: function(json) {
				json.imgwidth = screen.width / 2;
				json.imgheight = screen.width / 4;
				json.imgurl = imgurl;
				var width = screen.width;
				var height = width / 8 * 4;
				var name = json.shangpinxiangqing[0].mingcheng;
				var jine = json.shangpinxiangqing[0].jine;
				var jifen = json.shangpinxiangqing[0].jifen;
				var price1 = json.shangpinxiangqing[0].xiaoshoujiage;
				var oldprice = json.shangpinxiangqing[0].yuanjiage;
				var xiashoulaing = json.shangpinxiangqing[0].xiashoulaing;
				$('#name').html(name);
				$('#jine').html(jine);
				$('#jifen').html(jifen);
				$('#price1').html(price1);
				$('#oldprice').html(oldprice);
				
				if(xiashoulaing == ""){
					$('#shounum').html(0);
				}else{
					$('#shounum').html(xiashoulaing);
				}
				
				var Imglist = json.imgList;
				if(Imglist == null || Imglist == "" || typeof(Imglist) == "undefined"){
					$('#l_gg').append("<li style='width: 100%; float: left; ' class='am-active-slide'><a ><img src='img/zanwu.jpg'/></a></li>");
				}else{
				json.imgList.forEach(function(e) {
					$("#l_gg").append(
									"<li style=''><img src='"+imgurl+e+"' style='width:"+width+"px;height:"+height+"px;' ></li>");
						});
				}
					$('#yhb-advert').flexslider(
						{
							directionNav : false,
							controlNav : true,
							playAfterPaused : 1000,
							before : function(slider) {
								if (slider._pausedTimer) {
									window
											.clearTimeout(slider._pausedTimer);
									slider._pausedTimer = null;
								}
							},
							after : function(slider) {
								var pauseTime = slider.vars.playAfterPaused;
								if (pauseTime
										&& !isNaN(pauseTime)
										&& !slider.playing) {
									if (!slider.manualPause
											&& !slider.manualPlay
											&& !slider.stopped) {
										slider._pausedTimer = window
												.setTimeout(
											function() {
													slider.play();
														},
											pauseTime);
									}
								}
							}
						// 设置其他参数
						});
			},
			error: function() {
				alert("错误")
			}
		});

	}
	/**function goumai() {
		window.location.href = "tijiaodingdan.html?shangpinID="+shangpinID;
		
	}
	*/
	function addToShopCar(goodsid,e){
		var goodsid = getParameter("goodsid");
		var num = window.localStorage.getItem(goodsid);
		if (typeof(num) == "undefined" || num == null) {
			num = 0;
		}
		num = Number(num)+1;
		if(num > 100){
			num = 100;
		}else{
			var count = window.localStorage.getItem("shopcar-count");
			window.localStorage.setItem("shopcar-count",Number(count)+1);
		}
		window.localStorage.setItem(goodsid,num);
		
		new Toast({context:$('body'),message:'加入购物车成功'}).show();
		showCarCount();
		stopBubble(e);
	}
	/**
	function fun1(){
		window.location.href = "evaluation.html?goodsid="+goodsid;
	}
	*/	
	function callsucc(){}
	function callfail(){}
</script>
