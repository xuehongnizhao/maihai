<style type="text/css">

.am-header .am-header-title {
margin: 0 15%;
}


.doc-pannel {
	width: 100%;
	border-top: 1px solid #dddddd;
	height: 3em;
	line-height: 3em;
}

.doc-pannel span {
	border: none;
	width: 5em;
}

.doc-group {
	border-top-right-radius: 0;
	border-top-left-radius: 0;
	padding: 0em;
}

.doc-group:after {
	content: '';
	display: table;
	clear: both
}

.doc-group:before {
	display: block;
	color: #bbb;
	text-transform: uppercase;
	margin: 0 -15px 15px;
	padding: 4px 10px;
	font-size: 12px
}

body, html {
	width: 100%;
	height: 100%
}

body, html {
	width: 100%;
	height: 100%;
	background-image: url('img/mi_bg.png');
	background-size: cover;
	background-repeat: no-repeat;
}
hr {
	margin: 0em;
